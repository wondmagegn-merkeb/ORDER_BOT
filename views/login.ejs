<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in-up {
      animation: fadeInUp 0.6s ease-out;
    }
  </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
  <div class="w-full max-w-md mx-auto bg-white p-6 rounded-lg shadow-md animate-fade-in-up">
    <h2 class="text-3xl font-extrabold mb-6 text-gray-800 text-center flex items-center justify-center gap-2 transition duration-500">
      <i class="fas fa-sign-in-alt text-blue-600"></i>
      Login
    </h2>

    <form action="/login" method="POST" class="space-y-5" id="loginForm">
      <!-- Username -->
      <div>
        <label class="block mb-1 text-gray-700 font-medium">Username</label>
        <div class="flex items-center border border-gray-300 p-2 rounded focus-within:ring-2 focus-within:ring-blue-400">
          <i class="fas fa-user text-gray-400 mr-2"></i>
          <input type="text" name="username" id="username" class="w-full focus:outline-none" placeholder="Enter username">
        </div>
        <p id="usernameError" class="text-red-500 text-sm hidden">Username is required.</p>
      </div>

      <!-- Password -->
      <div>
        <label class="block mb-1 text-gray-700 font-medium">Password</label>
        <div class="flex items-center border border-gray-300 p-2 rounded focus-within:ring-2 focus-within:ring-blue-400">
          <i class="fas fa-lock text-gray-400 mr-2"></i>
          <input type="password" name="password" id="password" class="w-full focus:outline-none" placeholder="Enter password">
        </div>
        <p id="passwordError" class="text-red-500 text-sm hidden">Password is required.</p>
      </div>

      <!-- Submit Button -->
      <div class="pt-6 flex-col justify-between items-center">
        <button type="submit" class="w-full bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 active:scale-95 transition font-semibold">
          <i class="fas fa-sign-in-alt"></i>
          Login
        </button>
      </div>
    </form>

    <!-- Forgot Password Link -->
    <div class="flex justify-center mt-2">
      <a href="/forgot-password" class="text-gray-600 hover:text-blue-500 transition flex items-center gap-2 font-medium">
        <i class="fas fa-question-circle text-blue-500"></i>
        Forgot Password?
      </a>
    </div>
  </div>

  <!-- Error Modal -->
  <div class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden justify-center items-center z-50" id="errorModal">
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-md w-full">
      <h3 class="text-xl font-bold text-red-600">Error</h3>
      <p id="errorMessage" class="text-gray-600"></p>
      <button class="mt-4 px-4 py-2 bg-blue-600 text-white rounded" onclick="closeErrorModal()">Close</button>
    </div>
  </div>

  <!-- Include the JavaScript file -->
  <script src="js/login.js"></script>
</body>
</html>
