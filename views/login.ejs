<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }
</style>
  <style>
    /* Add some custom animations */
    .fade-in {
      animation: fadeIn 1s ease-out;
    }

    @keyframes fadeIn {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Animation for button hover */
    .btn-hover {
      transition: all 0.3s ease;
    }

    .btn-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Focus effects */
    .input-focus:focus {
      outline: none;
      border-color: #4C8BF5;
      box-shadow: 0 0 0 2px rgba(76, 139, 245, 0.5);
    }
  </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
  <div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md animate-fade-in-up">
    
      <h2 class="text-3xl font-extrabold text-gray-800 text-center mb-6">
        <i class="fas fa-sign-in-alt text-blue-600"></i>
        Login
      </h2>

      <form action="/login" method="POST" class="space-y-5">
        <!-- Username -->
        <div>
          <label class="block mb-1 text-gray-700 font-medium">Username</label>
          <div class="flex items-center border border-gray-300 p-2 rounded focus-within:ring-2 focus-within:ring-blue-400">
            <i class="fas fa-user text-gray-400 mr-2"></i>
            <input type="text" name="username" class="w-full focus:outline-none input-focus" placeholder="Enter username" required>
          </div>
        </div>

        <!-- Password -->
        <div>
          <label class="block mb-1 text-gray-700 font-medium">Password</label>
          <div class="flex items-center border border-gray-300 p-2 rounded focus-within:ring-2 focus-within:ring-blue-400">
            <i class="fas fa-lock text-gray-400 mr-2"></i>
            <input type="password" name="password" class="w-full focus:outline-none input-focus" placeholder="Enter password" required>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-6">
          <button type="submit" class="w-full bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 active:scale-95 transition font-semibold btn-hover">
            <i class="fas fa-sign-in-alt"></i>
            Login
          </button>
        </div>
      </form>

      <!-- Link to Register (optional) -->
      <div class="text-center mt-4">
        <p class="text-gray-600">
          <a href="/forgot-password" class="text-blue-500 hover:underline">Forgot Password?</a>
        </p>
      </div>
    
  </div>
</body>
</html>
