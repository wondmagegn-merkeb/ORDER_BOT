<h2 class="text-4xl font-semibold text-blue-800 mb-6">ðŸ“Š Dashboard Overview</h2>

<!-- KPI Section with Different Background Colors -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <div class="bg-gradient-to-r from-purple-600 via-indigo-600 to-blue-600 p-6 rounded-xl shadow-lg">
        <h3 class="text-lg font-semibold text-white">Total Users</h3>
        <p class="text-3xl text-white mt-2"><%= totalUsers %></p>
    </div>
    <div class="bg-gradient-to-r from-teal-500 via-green-500 to-lime-500 p-6 rounded-xl shadow-lg">
        <h3 class="text-lg font-semibold text-white">Total Orders</h3>
        <p class="text-3xl text-white mt-2"><%= totalOrders %></p>
    </div>
    <div class="bg-gradient-to-r from-orange-400 via-red-500 to-pink-600 p-6 rounded-xl shadow-lg">
        <h3 class="text-lg font-semibold text-white">Total Revenue</h3>
        <p class="text-3xl text-white mt-2">ETB <%= totalRevenue %></p>
    </div>
    <div class="bg-gradient-to-r from-green-400 via-teal-400 to-blue-400 p-6 rounded-xl shadow-lg">
        <h3 class="text-lg font-semibold text-white">Users</h3>
        <div class="flex flex-col space-y-4 mt-2">
            <!-- Users Online -->
            <div class="text-3xl text-white">
                <span>Online: <%= totalOnlineUsers %></span>
            </div>
            <div class="text-xl text-white">
                <span><%= ((totalOnlineUsers / totalUsers) * 100).toFixed(1) %> of Total Users</span>
            </div>
            
            <!-- Users with Orders -->
            <div class="text-3xl text-white mt-4">
                <span>With Orders: <%= usersWithOrders %></span>
            </div>
            <div class="text-xl text-white">
                <span><%= ((usersWithOrders / totalUsers) * 100).toFixed(1) %> of Total Users</span>
            </div>
        </div>
    </div>
</div>

<!-- Additional KPIs -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-white">New Customers</h3>
        <div class="mt-4">
            <p class="text-3xl text-indigo-200">This Week: <%= newCustomersThisWeek %></p>
            <p class="text-3xl text-purple-200">This Month: <%= newCustomersThisMonth %></p>
        </div>
    </div>
    <div class="bg-gradient-to-r from-cyan-300 via-sky-400 to-blue-500 p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-white">Average Order Value</h3>
        <div class="flex items-center justify-between mt-4">
            <p class="text-2xl text-white">Min: <span class="text-yellow-400">${minOrderValue}</span></p>
            <p class="text-2xl text-white">Max: <span class="text-red-400">${maxOrderValue}</span></p>
            <p class="text-3xl text-pink-300 mt-2">Avg: $<%= avgOrderValue %></p>
        </div>
    </div>
    <div class="bg-gradient-to-r from-yellow-500 via-orange-400 to-red-500 p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-white">Orders by Status</h3>
        <ul class="mt-4 space-y-1 text-sm text-white">
            <% ordersStatus.forEach(status => { %>
                <li><%= status.status %>: <%= status.count %></li>
            <% }) %>
        </ul>
    </div>
</div>

<!-- Top Users Section -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Top Users Section -->
    <div class="bg-gradient-to-r from-pink-500 via-red-500 to-orange-500 p-6 rounded-xl shadow-md mb-8">
        <h3 class="text-lg font-semibold text-white">Top Users</h3>
        <ul class="space-y-3 mt-4">
            <% topUsers.forEach(user => { %>
                <li class="text-lg text-white"><%= user.name %> - <%= user.orderCount %> Orders</li>
            <% }) %>
        </ul>
    </div>

    <!-- Feedback Section -->
    <div class="bg-gradient-to-r from-indigo-400 via-blue-300 to-teal-400 p-6 rounded-xl shadow-md mb-8">
        <h3 class="text-lg font-semibold text-white">User Feedback</h3>
        <ul class="space-y-3 mt-4">
            <% userFeedback.forEach(feedback => { %>
                <li class="text-lg text-white">"<%= feedback.feedbackText %>" <span class="text-gray-200">(<%= feedback.feedbackCount %>)</span></li>
            <% }) %>
        </ul>
    </div>
</div>
<!-- Charts Section -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Order Status Chart This Week -->
    <div class="bg-white p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Order Status This Week</h3>
        <canvas id="orderStatusChartThisWeek"></canvas>
    </div>

    <!-- Order Status Chart This Month -->
    <div class="bg-white p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Order Status This Month</h3>
        <canvas id="orderStatusChartThisMonth"></canvas>
    </div>
</div>
<!-- Charts Section -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Daily Revenue Chart -->
    <div class="bg-white p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Daily Revenue</h3>
        <canvas id="dailyRevenueChart"></canvas>
    </div>

    <!-- Monthly Revenue Chart -->
    <div class="bg-white p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Month Revenue</h3>
        <canvas id="ordersByDayChart"></canvas>
    </div>
</div>
<!-- Charts Section -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Order Status Chart This Week -->
    <div class="bg-white p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Order Status This Week</h3>
        <canvas id="orderStatusChartThisWeek"></canvas>
    </div>

    <!-- Order Status Chart This Month -->
    <div class="bg-white p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Order Status This Month</h3>
        <canvas id="orderStatusChartThisMonth"></canvas>
    </div>
</div>
<!-- Chart.js Script -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Data for Order Status This Week
  const labelsThisWeek = <%= JSON.stringify(orderStatusThisWeek.map(item => item.status)) %>;
  const dataThisWeek = <%= JSON.stringify(orderStatusThisWeek.map(item => item.statusCount)) %>;

  const orderStatusDataThisWeek = {
    labels: labelsThisWeek,
    datasets: [{
      label: 'Order Status This Week',
      data: dataThisWeek,
      backgroundColor: [
        'rgba(75, 192, 192, 0.2)', // for "in progress" status
        'rgba(153, 102, 255, 0.2)', // for "completed" status
        'rgba(255, 159, 64, 0.2)', // for "pending" status
        'rgba(255, 99, 132, 0.2)' // for "cancelled" status
      ],
      borderColor: [
        'rgba(75, 192, 192, 1)',
        'rgba(153, 102, 255, 1)',
        'rgba(255, 159, 64, 1)',
        'rgba(255, 99, 132, 1)'
      ],
      borderWidth: 1
    }]
  };

  const ctxThisWeek = document.getElementById('orderStatusChartThisWeek').getContext('2d');
  new Chart(ctxThisWeek, {
    type: 'pie',
    data: orderStatusDataThisWeek,
    options: {
      responsive: true
    }
  });

  // Data for Order Status This Month
  const labelsThisMonth = <%= JSON.stringify(orderStatusThisMonth.map(item => item.status)) %>;
  const dataThisMonth = <%= JSON.stringify(orderStatusThisMonth.map(item => item.statusCount)) %>;

  const orderStatusDataThisMonth = {
    labels: labelsThisMonth,
    datasets: [{
      label: 'Order Status This Month',
      data: dataThisMonth,
      backgroundColor: [
        'rgba(75, 192, 192, 0.2)', // for "in progress" status
        'rgba(153, 102, 255, 0.2)', // for "completed" status
        'rgba(255, 159, 64, 0.2)', // for "pending" status
        'rgba(255, 99, 132, 0.2)' // for "cancelled" status
      ],
      borderColor: [
        'rgba(75, 192, 192, 1)',
        'rgba(153, 102, 255, 1)',
        'rgba(255, 159, 64, 1)',
        'rgba(255, 99, 132, 1)'
      ],
      borderWidth: 1
    }]
  };

  const ctxThisMonth = document.getElementById('orderStatusChartThisMonth').getContext('2d');
  new Chart(ctxThisMonth, {
    type: 'pie',
    data: orderStatusDataThisMonth,
    options: {
      responsive: true
    }
  });
  // Data for Order Status This Week
  const labelsThisWeek = <%= JSON.stringify(orderStatusThisWeek.map(item => item.status)) %>;
  const dataThisWeek = <%= JSON.stringify(orderStatusThisWeek.map(item => item.statusCount)) %>;

  const orderStatusDataThisWeek = {
    labels: labelsThisWeek,
    datasets: [{
      label: 'Order Status This Week',
      data: dataThisWeek,
      backgroundColor: [
        'rgba(75, 192, 192, 0.2)', // for "progress" status
        'rgba(255, 159, 64, 0.2)', // for "pending" status
        'rgba(255, 99, 132, 0.2)', // for "cancelled" status
        'rgba(153, 102, 255, 0.2)', // for "completed" status
        'rgba(54, 162, 235, 0.2)' // for "delivered" status
      ],
      borderColor: [
        'rgba(75, 192, 192, 1)',
        'rgba(255, 159, 64, 1)',
        'rgba(255, 99, 132, 1)',
        'rgba(153, 102, 255, 1)',
        'rgba(54, 162, 235, 1)'
      ],
      borderWidth: 1
    }]
  };

  const ctxThisWeek = document.getElementById('orderStatusChartThisWeek').getContext('2d');
  new Chart(ctxThisWeek, {
    type: 'bar',
    data: orderStatusDataThisWeek,
    options: {
      responsive: true,
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });

  // Data for Order Status This Month
  const labelsThisMonth = <%= JSON.stringify(orderStatusThisMonth.map(item => item.status)) %>;
  const dataThisMonth = <%= JSON.stringify(orderStatusThisMonth.map(item => item.statusCount)) %>;

  const orderStatusDataThisMonth = {
    labels: labelsThisMonth,
    datasets: [{
      label: 'Order Status This Month',
      data: dataThisMonth,
      backgroundColor: [
        'rgba(75, 192, 192, 0.2)', // for "progress" status
        'rgba(255, 159, 64, 0.2)', // for "pending" status
        'rgba(255, 99, 132, 0.2)', // for "cancelled" status
        'rgba(153, 102, 255, 0.2)', // for "completed" status
        'rgba(54, 162, 235, 0.2)' // for "delivered" status
      ],
      borderColor: [
        'rgba(75, 192, 192, 1)',
        'rgba(255, 159, 64, 1)',
        'rgba(255, 99, 132, 1)',
        'rgba(153, 102, 255, 1)',
        'rgba(54, 162, 235, 1)'
      ],
      borderWidth: 1
    }]
  };

  const ctxThisMonth = document.getElementById('orderStatusChartThisMonth').getContext('2d');
  new Chart(ctxThisMonth, {
    type: 'bar',
    data: orderStatusDataThisMonth,
    options: {
      responsive: true,
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });

</script>
