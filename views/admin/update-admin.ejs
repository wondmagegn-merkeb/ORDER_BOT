<div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded-lg shadow-lg">
  <h2 class="text-2xl font-semibold mb-6 text-center flex items-center justify-center gap-2">
    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" stroke-width="2"
         viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round"
            d="M12 4v1m0 14v1m7-7h1M4 12H3m15.364 4.364l.707.707M5.636 5.636l-.707-.707m0 12.728l.707.707M18.364 5.636l.707-.707M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>
    Update Admin
  </h2>

  <% if (success) { %>
    <div class="bg-green-100 text-green-800 p-3 rounded mb-4 flex items-center gap-2">
      ✅ <%= success %>
    </div>
  <% } %>
  <% if (error) { %>
    <div class="bg-red-100 text-red-800 p-3 rounded mb-4 flex items-center gap-2">
      ❌ <%= error %>
    </div>
  <% } %>

  <form action="/api/admin/edit/<%= admin.adminId %>" method="POST" class="space-y-4">
    <!-- Username -->
    <div>
      <label class="block font-medium mb-1 flex items-center gap-1">
        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M5.121 17.804A9.004 9.004 0 0112 15a9.004 9.004 0 016.879 2.804M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Username
      </label>
      <input type="text" name="username" value="<%= admin.username %>"
             class="w-full border p-2 rounded" required>
    </div>

    <!-- Email -->
    <div>
      <label class="block font-medium mb-1 flex items-center gap-1">
        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 8h18a2 2 0 002-2V8a2 2 0 00-2-2H3a2 2 0 00-2 2v6a2 2 0 002 2z"/>
        </svg>
        Email
      </label>
      <input type="email" name="email" value="<%= admin.email %>"
             class="w-full border p-2 rounded" required>
    </div>

    <!-- Telegram ID -->
    <div>
      <label class="block font-medium mb-1 flex items-center gap-1">
        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
        </svg>
        Telegram ID
      </label>
      <input type="text" name="telegramId" value="<%= admin.telegramId %>"
             class="w-full border p-2 rounded" required>
    </div>

    <!-- Role -->
    <div>
      <label class="block font-medium mb-1">Role</label>
      <select name="role" class="w-full border p-2 rounded" required>
        <option value="admin" <%= admin.role === 'admin' ? 'selected' : '' %>>Admin</option>
        <option value="superadmin" <%= admin.role === 'superadmin' ? 'selected' : '' %>>Super Admin</option>
      </select>
    </div>

    <!-- State -->
    <div>
      <label class="block font-medium mb-1">State</label>
      <select name="states" class="w-full border p-2 rounded" required>
        <option value="active" <%= admin.states === 'active' ? 'selected' : '' %>>Active</option>
        <option value="inactive" <%= admin.states === 'inactive' ? 'selected' : '' %>>Inactive</option>
      </select>
    </div>

    <!-- Password -->
    <div>
      <label class="block font-medium mb-1 flex items-center gap-1">
        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M12 15v2m0 4h.01M5 13h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2z"/>
        </svg>
        New Password <span class="text-sm text-gray-500">(leave blank to keep)</span>
      </label>
      <input type="password" name="password" class="w-full border p-2 rounded">
    </div>

    <!-- Buttons -->
    <div class="flex justify-between items-center pt-4">
      <a href="/admin/list" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-5 py-2 rounded flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12"/>
        </svg>
        Cancel
      </a>
      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M5 13l4 4L19 7"/>
        </svg>
        Update
      </button>
    </div>
  </form>
</div>
