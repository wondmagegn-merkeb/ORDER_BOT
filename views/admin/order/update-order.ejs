<style>
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }

  /* Spinner Styles */
  .spinner {
    border: 2px solid #f3f3f3;
    border-top: 2px solid #fff;
    border-radius: 50%;
    width: 16px;
    height: 16px;
    animation: spin 0.6s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>

<div class="max-w-xl mx-auto bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md animate-fade-in-up">
  <h2 class="text-3xl font-extrabold mb-6 text-gray-800 dark:text-gray-100 text-center flex items-center justify-center gap-2 transition duration-500">
    <i class="fas fa-user-edit text-green-600"></i>
    Update User
  </h2>

  <form action="/api/users/<%= user.userId %>" method="POST" class="space-y-5" onsubmit="showSpinner(event)">

    <!-- User Type Selection -->
    <div class="transition duration-300 transform hover:scale-[1.01]">
      <label class="block mb-1 text-gray-700 dark:text-gray-200 font-medium">User Type</label>
      <div class="flex items-center border border-gray-300 dark:border-gray-600 p-2 rounded focus-within:ring-2 focus-within:ring-green-400">
        <i class="fas fa-user-tag text-gray-400 dark:text-gray-300 mr-2"></i>
        <select name="userType" class="w-full bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none">
          <option value="guest" <%= user.userType === 'guest' ? 'selected' : '' %>>Guest</option>
          <option value="vip" <%= user.userType === 'vip' ? 'selected' : '' %>>VIP</option>
          <option value="customer" <%= user.userType === 'customer' ? 'selected' : '' %>>Customer</option>
        </select>
      </div>
    </div>

    <!-- State (Single Active Checkbox) -->
    <div class="transition duration-300 transform hover:scale-[1.01]">
      <label class="block mb-1 text-gray-700 dark:text-gray-200 font-medium">State</label>
      <div class="flex items-center border border-gray-300 dark:border-gray-600 p-2 rounded focus-within:ring-2 focus-within:ring-blue-400">
        <i class="fas fa-check-circle text-gray-400 dark:text-gray-300 mr-2"></i>
        <input type="checkbox" name="isActive" class="w-5 h-5" <%= user.isActive ? 'checked' : '' %>>
      </div>
    </div>

    <!-- New Total Price -->
    <div class="transition duration-300 transform hover:scale-[1.01]">
      <label class="block mb-1 text-gray-700 dark:text-gray-200 font-medium">New Total Price</label>
      <div class="flex items-center border border-gray-300 dark:border-gray-600 p-2 rounded focus-within:ring-2 focus-within:ring-blue-400">
        <i class="text-gray-400 dark:text-gray-300 mr-2">ETB</i>
        <input 
          type="number" 
          name="newTotalPrice" 
          value="<%= order.totalPrice || '' %>" 
          placeholder="Enter New Total Price" 
          class="w-full bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none"
          step="0.01"
          min="0"
        >
      </div>
    </div>

    <!-- Order Status Selection -->
    <div class="transition duration-300 transform hover:scale-[1.01]">
      <label class="block mb-1 text-gray-700 dark:text-gray-200 font-medium">Order Status</label>
      <div class="flex items-center border border-gray-300 dark:border-gray-600 p-2 rounded focus-within:ring-2 focus-within:ring-blue-400">
        <i class="fas fa-tasks text-gray-400 dark:text-gray-300 mr-2"></i>
        <select name="status" class="w-full bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none">
          <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
          <option value="progress" <%= order.status === 'progress' ? 'selected' : '' %>>In Progress</option>
          <option value="completed" <%= order.status === 'completed' ? 'selected' : '' %>>Completed</option>
          <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
          <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
        </select>
      </div>
    </div>

    <!-- Submit and Cancel Buttons -->
    <div class="pt-6 flex justify-between items-center">
      <button type="submit" id="submitButton" class="bg-blue-600 text-white px-6 py-2 rounded flex items-center gap-2 hover:bg-blue-700 transition font-semibold">
        <i class="fas fa-save"></i>
        Update Order
        <div id="spinner" class="spinner hidden"></div>
      </button>

      <a href="/orders" class="text-gray-600 dark:text-gray-300 hover:text-red-500 transition flex items-center gap-2 font-medium">
        <i class="fas fa-times-circle text-red-500"></i>
        Cancel
      </a>
    </div>
  </form>
</div>

<script>
  function showSpinner(event) {
    event.preventDefault();
    const spinner = document.getElementById('spinner');
    const submitButton = document.getElementById('submitButton');
    spinner.classList.remove('hidden');
    submitButton.disabled = true;

    // Simulate form submission (remove this when you have a backend)
    setTimeout(() => {
      event.target.submit();
    }, 1000);
  }
</script>
