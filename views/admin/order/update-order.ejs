<style>
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }
</style>

  <div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md animate-fade-in-up">
    <h2 class="text-3xl font-extrabold mb-6 text-gray-800 text-center flex items-center justify-center gap-2 transition duration-500">
    <i class="fas fa-user-edit text-green-600"></i>
    Update User
  </h2>

  <form action="/api/users/<%= user.userId %>" method="POST" class="space-y-5">

    <!-- User Type Selection -->
    <div class="transition duration-300 transform hover:scale-[1.01]">
      <label class="block mb-1 text-gray-700 font-medium">User Type</label>
      <div class="flex items-center border border-gray-300 p-2 rounded focus-within:ring-2 focus-within:ring-green-400">
        <i class="fas fa-user-tag text-gray-400 mr-2"></i>
        <select name="userType" class="w-full bg-white focus:outline-none">
          <option value="guest" <%= user.userType === 'guest' ? 'selected' : '' %>>Guest</option>
          <option value="vip" <%= user.userType === 'vip' ? 'selected' : '' %>>VIP</option>
          <option value="customer" <%= user.userType === 'customer' ? 'selected' : '' %>>Customer</option>
        </select>
      </div>
    </div>

    <!-- State (Single Active Checkbox) -->
    <div class="transition duration-300 transform hover:scale-[1.01]">
      <label class="block mb-1 text-gray-700 font-medium">State</label>
      <label class="inline-flex items-center">
        <input type="checkbox" name="status" value="active" <%= user.status === 'active' ? 'checked' : '' %> class="form-checkbox text-green-600">
        <span class="ml-2 text-gray-700">Active</span>
      </label>
    </div>

    <!-- Submit and Cancel Buttons -->
    <div class="pt-6 flex justify-between items-center">
      <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded flex items-center gap-2 hover:bg-green-700 transition font-semibold">
        <i class="fas fa-save"></i>
        Update User
      </button>

      <a href="/users" class="text-gray-600 hover:text-red-500 transition flex items-center gap-2 font-medium">
        <i class="fas fa-times-circle text-red-500"></i>
        Cancel
      </a>
    </div>
  </form>
</div>
