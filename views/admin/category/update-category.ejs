<style>
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }
</style>

<div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md animate-fade-in-up">
  <h2 class="text-3xl font-extrabold mb-6 text-gray-800 text-center flex items-center justify-center gap-2 transition duration-500">
    <i class="fas fa-edit text-green-500"></i>
    Update Category
  </h2>

  <form action="/api/categories/edit/<%= category.id %>" method="POST" class="space-y-5">
    <div class="transition duration-300 transform hover:scale-[1.01]">
      <label class="block mb-1 text-gray-700 font-medium">Category Name</label>
      <div class="flex items-center border border-gray-300 p-2 rounded focus-within:ring-2 focus-within:ring-green-400">
        <i class="fas fa-tag text-gray-400 mr-2"></i>
        <input 
          type="text" 
          name="categoryName" 
          value="<%= category.categoryName %>" 
          class="w-full focus:outline-none" 
          placeholder="Enter category name" 
          required
        >
      </div>
    </div>

      <div class="transition duration-300 transform hover:scale-[1.01]">
      <label class="block mb-1 text-gray-700 font-medium">Description</label>
     <div class="flex items-center border border-gray-300 p-2 rounded focus-within:ring-2 focus-within:ring-green-400">
        <i class="fas fa-align-left text-gray-400 mt-1 mr-2"></i>
        <textarea 
          name="description" 
          class="w-full focus:outline-none resize-none" 
          placeholder="Write a short description..." 
          rows="3"
        ><%= category.description %></textarea>
      </div>
    </div>

    <div class="pt-6 flex justify-between items-center">
      <button type="submit" class="bg-green-500 text-white px-6 py-2 rounded flex items-center gap-2 hover:bg-green-600 transition font-semibold">
        <i class="fas fa-save"></i>
        Update Category
      </button>

      <a href="/categories" class="text-gray-600 hover:text-red-500 transition flex items-center gap-2 font-medium">
        <i class="fas fa-times-circle text-red-500"></i>
        Cancel
      </a>
    </div>
  </form>
</div>
