<h2 class="text-4xl font-semibold text-blue-700 mb-6">ðŸ“Š Dashboard Overview</h2>

<!-- KPI Section with Different Background Colors -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <div class="bg-gradient-to-r from-purple-700 via-indigo-700 to-blue-700 p-6 rounded-xl shadow-lg">
        <h3 class="text-lg font-semibold text-white">Total Users</h3>
        <p class="text-3xl text-white mt-2"><%= totalUsers %></p>
    </div>
    <div class="bg-gradient-to-r from-teal-600 via-green-600 to-lime-600 p-6 rounded-xl shadow-lg">
        <h3 class="text-lg font-semibold text-white">Total Orders</h3>
        <p class="text-3xl text-white mt-2"><%= totalOrders %></p>
    </div>
    <div class="bg-gradient-to-r from-yellow-500 via-red-600 to-pink-500 p-6 rounded-xl shadow-lg">
        <h3 class="text-lg font-semibold text-white">Total Revenue</h3>
        <p class="text-3xl text-white mt-2">ETB <%= totalRevenue %></p>
    </div>
    <div class="bg-gradient-to-r from-green-500 via-teal-500 to-blue-500 p-6 rounded-xl shadow-lg">
        <h3 class="text-lg font-semibold text-white">Users</h3>
        <div class="flex flex-col space-y-4 mt-2">
            <!-- Users Online -->
            <div class="text-3xl text-white">
                <span>Online: <%= totalOnlineUsers %></span>
            </div>
            <div class="text-xl text-white">
                <span><%= ((totalOnlineUsers / totalUsers) * 100).toFixed(1) %> of Total Users</span>
            </div>
            
            <!-- Users with Orders -->
            <div class="text-3xl text-white mt-4">
                <span>With Orders: <%= usersWithOrders %></span>
            </div>
            <div class="text-xl text-white">
                <span><%= ((usersWithOrders / totalUsers) * 100).toFixed(1) %> of Total Users</span>
            </div>
        </div>
    </div>
</div>

<!-- Additional KPIs -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-white">New Customers</h3>
        <div class="mt-4">
            <p class="text-3xl text-purple-300">This Week: <%= newCustomersThisWeek %></p>
            <p class="text-3xl text-purple-100">This Month: <%= newCustomersThisMonth %></p>
        </div>
    </div>
    <div class="bg-gradient-to-r from-cyan-400 via-sky-400 to-blue-500 p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-white">Average Order Value</h3>
        <div class="flex items-center justify-between mt-4">
            <p class="text-2xl text-white">Min: <span class="text-yellow-300">${minOrderValue}</span></p>
            <p class="text-2xl text-white">Max: <span class="text-red-300">${maxOrderValue}</span></p>
            <p class="text-3xl text-pink-400 mt-2">Avg: $<%= avgOrderValue %></p>
        </div>
    </div>
    <div class="bg-gradient-to-r from-yellow-600 via-red-500 to-orange-500 p-6 rounded-xl shadow-md">
        <h3 class="text-lg font-semibold text-white">Orders by Status</h3>
        <ul class="mt-4 space-y-1 text-sm text-white">
            <% ordersByStatus.forEach(status => { %>
                <li><%= status.status %>: <%= status.count %></li>
            <% }) %>
        </ul>
    </div>
</div>

<!-- Top Users Section -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Top Users Section -->
    <div class="bg-gradient-to-r from-pink-600 via-red-600 to-orange-600 p-6 rounded-xl shadow-md mb-8">
        <h3 class="text-lg font-semibold text-white">Top Users</h3>
        <ul class="space-y-3 mt-4">
            <% topUsers.forEach(user => { %>
                <li class="text-lg text-white"><%= user.name %> - <%= user.orderCount %> Orders</li>
            <% }) %>
        </ul>
    </div>

    <!-- Feedback Section -->
    <div class="bg-gradient-to-r from-indigo-500 via-blue-400 to-teal-500 p-6 rounded-xl shadow-md mb-8">
        <h3 class="text-lg font-semibold text-white">User Feedback</h3>
        <ul class="space-y-3 mt-4">
            <% userFeedback.forEach(feedback => { %>
                <li class="text-lg text-white">"<%= feedback.feedbackText %>" <span class="text-gray-200">(<%= feedback.feedbackCount %>)</span></li>
            <% }) %>
        </ul>
    </div>
</div>
