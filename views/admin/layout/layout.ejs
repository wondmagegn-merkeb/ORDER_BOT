<!DOCTYPE html>
<html lang="en" class="bg-gray-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> | Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script defer>
      // Simple mobile sidebar toggle
      function toggleSidebar() {
        document.getElementById('sidebar').classList.toggle('hidden');
      }
    </script>
  </head>

  <body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <div class="flex min-h-screen">

      <!-- Sidebar -->
      <div id="sidebar" class="w-64 bg-white shadow-md hidden md:block">
        <%- include('../partials/sidebar') %>
      </div>

      <!-- Main content -->
      <div class="flex-1 flex flex-col">
        <!-- Top Bar -->
        <header class="bg-white shadow px-6 py-4 flex items-center justify-between md:justify-end">
          <button onclick="toggleSidebar()" class="md:hidden text-gray-600 focus:outline-none">
            <!-- Hamburger Icon -->
            <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
          <div class="text-gray-700 text-sm md:text-base">
            Welcome, Admin
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 p-6">
          <%- body %>
        </main>

        <!-- Footer -->
        <footer class="bg-white text-center text-gray-500 text-sm py-4 border-t">
          <%- include('../partials/footer') %>
        </footer>
      </div>
    </div>
  </body>
</html>
