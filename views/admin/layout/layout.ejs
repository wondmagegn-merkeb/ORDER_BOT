<!DOCTYPE html>
<html lang="en" class="bg-gray-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> | Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      // Toggle sidebar on small screens
      function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        sidebar.classList.toggle('translate-x-0');
        sidebar.classList.toggle('-translate-x-full');
      }
    </script>
  </head>

  <body class="bg-gray-100 font-sans tracking-normal">
    <div class="flex">

      <!-- Fixed Sidebar -->
      <div id="sidebar" class="fixed top-0 left-0 h-full w-64 bg-white shadow-lg transform md:translate-x-0 -translate-x-full transition-transform duration-200 ease-in-out z-40">
        <%- include('../partials/sidebar') %>
      </div>

      <!-- Main Content -->
      <div class="flex-1 min-h-screen flex flex-col md:ml-64">

        <!-- Fixed Header -->
        <header class="fixed top-0 left-0 md:left-64 right-0 h-16 bg-white shadow flex items-center justify-between px-6 z-30">
          <!-- Menu Icon for mobile -->
          <button onclick="toggleSidebar()" class="md:hidden text-gray-700 focus:outline-none">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
          <div class="text-gray-800 text-sm md:text-base font-medium">Welcome, Admin</div>
        </header>

        <!-- Scrollable Content -->
        <main class="mt-16 p-6 flex-1 overflow-auto bg-gray-100">
          <%- include('../partials/notification') %>
          <%- include('../partials/deleteModal') %>
          <%- body %>
        </main>

        <!-- Footer -->
        <footer class="bg-white text-center text-gray-500 text-sm py-4 border-t">
          <%- include('../partials/footer') %>
        </footer>
      </div>
    </div>

  </body>
</html>
