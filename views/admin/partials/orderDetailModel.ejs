<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Detail - <%= order.orderId %></title>
  <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY&libraries=places"></script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.2/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">

  <div class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold text-center mb-6">Order Details: <%= order.orderId %></h1>

    <!-- Order Details -->
    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-800">Order Information</h2>
      <p class="text-gray-700"><strong>Status:</strong> <%= order.status %></p>
      <p class="text-gray-700"><strong>User ID:</strong> <%= order.userId %></p>
      <p class="text-gray-700"><strong>Location:</strong> <%= order.location %></p>
      <p class="text-gray-700"><strong>Special Instructions:</strong> <%= order.specialOrder %></p>
      <p class="text-gray-700"><strong>Total Price:</strong> $<%= order.totalPrice %></p>
    </div>

    <!-- Food Image -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-2">Food Image</h2>
      <img src="<%= order.foodImage %>" alt="Food Image" class="w-full h-auto rounded shadow-md">
    </div>

    <!-- Map (using Google Maps) -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-2">Delivery Location</h2>
      <div id="map" class="w-full h-64 rounded shadow-md"></div>
    </div>

    <!-- Back Button -->
    <a href="/orders" class="text-blue-500 hover:text-blue-600">Back to Orders</a>
  </div>

  <script>
    // Google Map Initialization
    function initMap() {
      const location = { lat: <%= order.latitude %>, lng: <%= order.longitude %> };
      const map = new google.maps.Map(document.getElementById("map"), {
        zoom: 14,
        center: location,
      });
      const marker = new google.maps.Marker({
        position: location,
        map: map,
        title: "Delivery Location",
      });
    }

    // Load the map after the page is fully loaded
    window.onload = initMap;
  </script>
</body>
</html>
