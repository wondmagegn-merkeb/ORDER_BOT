<% if (typeof success !== 'undefined') { %>
  <div id="toast-success" class="fixed top-5 right-5 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-lg z-50 animate-slide-in">
    <strong class="font-bold">Success: </strong> <%= success %>
  </div>
<% } %>

<% if (typeof error !== 'undefined') { %>
  <div id="toast-error" class="fixed top-5 right-5 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-lg z-50 animate-slide-in">
    <strong class="font-bold">Error: </strong> <%= error %>
  </div>
<% } %>

<script>
  // Auto-hide after 4 seconds
  setTimeout(() => {
    const successToast = document.getElementById("toast-success");
    const errorToast = document.getElementById("toast-error");
    if (successToast) successToast.style.display = "none";
    if (errorToast) errorToast.style.display = "none";
  }, 4000);
</script>

<style>
  .animate-slide-in {
    animation: slideIn 0.4s ease-out;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(100%);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
