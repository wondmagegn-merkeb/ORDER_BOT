<header class="fixed top-0 left-0 md:left-64 right-0 h-16 bg-white dark:bg-gray-900 shadow flex items-center justify-between px-6 z-30">
  <!-- Menu Icon for mobile -->
  <button onclick="toggleSidebar()" class="md:hidden text-gray-700 dark:text-gray-200 focus:outline-none">
    <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>

  <div class="text-gray-800 dark:text-gray-200 text-sm md:text-base font-medium">
    <% if (role === 'admin') { %>
      Welcome, Admin
    <% } else if (role === 'manager') { %>
      Welcome, Manager
    <% } else if (role === 'delivery') { %>
      Welcome, Delivery Man/girl 
    <% } %>
  </div>

  <!-- Dark Mode Toggle Icon -->
  <button onclick="toggleDarkMode()" class="text-gray-700 dark:text-gray-200 focus:outline-none text-xl" id="darkModeToggle">
    <i class="fas fa-moon"></i>
  </button>
</header>
